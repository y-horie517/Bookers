<% if flash[:notice] %>
	<p class="notice"><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th width="250px">Title</th>
			<th width="500px">Body</th>
			<th width="50px" ></th>
			<th width="50px" ></th>
			<th width="50px" ></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<%#クラス名linkはcssでの共通の指定用%>
			<td align="center"><%= link_to 'show', book_path(book), class: "show_#{book.id} link" %></td>
			<td align="center"><%= link_to 'edit', edit_book_path(book), class: "edit_#{book.id} link" %></td>
			<td align="center"><%= link_to 'destroy', book_path(book), method: :delete, "data-confirm" => 'Are you sure?', class: "destroy_#{book.id} link" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h3 class="newbook">New Book</h3>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

	<p>Title</<p>
	<br>
	<%= f.text_field :title, class:"book_title" %>

	<p>Body</p>
	<%= f.text_area :body, class:"book_body" %>
	<br>
	<%= f.submit 'Create Book' %>

<% end %>